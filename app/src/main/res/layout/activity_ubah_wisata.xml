<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.wisata.TambahWisataActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Tambah Data Wisata"
            android:textSize="22dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_Nama"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_editext"
            android:hint="Nama Wisata"/>

        <EditText
            android:id="@+id/et_deskripsiWisata"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_editext"
            android:hint="Deskripsi Wisata"/>

        <EditText
            android:id="@+id/et_Alamat"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_editext"
            android:hint="Alamat WIsata"/>



        <EditText
            android:id="@+id/harga_tiket"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_editext"
            android:hint="harga tiket"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Pilih Gambar"
            android:id="@+id/btn_PilihGambar"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Simpan"
            android:id="@+id/btn_Simpan"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

</LinearLayout>